.singleLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; }

.bottomLineModel {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 200rpx;
  background: #fff;
  font-size: 24rpx;
  color: #515151; }
  .bottomLineModel::before {
    content: "";
    display: inline-block;
    width: 200rpx;
    height: 2rpx;
    margin-right: 8rpx;
    background: #e6e6e6;
    vertical-align: middle; }
  .bottomLineModel::after {
    content: "";
    display: inline-block;
    width: 200rpx;
    height: 2rpx;
    margin-left: 8rpx;
    background: #e6e6e6;
    vertical-align: middle; }

.messageContent {
  width: 750rpx;
  height: auto;
  padding: 30rpx 0; }
  .messageContent .title {
    font-size: 34rpx;
    color: #2c2c2c;
    font-weight: 600;
    text-align: center; }
  .messageContent .content {
    width: 690rpx;
    margin: 40rpx auto 0;
    text-indent: 2em;
    font-size: 22rpx;
    color: #515151; }
