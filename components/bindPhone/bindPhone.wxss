.singleLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; }

.bottomLineModel {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 200rpx;
  background: #fff;
  font-size: 24rpx;
  color: #515151; }
  .bottomLineModel::before {
    content: "";
    display: inline-block;
    width: 200rpx;
    height: 2rpx;
    margin-right: 8rpx;
    background: #e6e6e6;
    vertical-align: middle; }
  .bottomLineModel::after {
    content: "";
    display: inline-block;
    width: 200rpx;
    height: 2rpx;
    margin-left: 8rpx;
    background: #e6e6e6;
    vertical-align: middle; }

.bindPhone {
  position: relative;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); }
  .bindPhone .content {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%, -20%);
    width: 540rpx;
    padding: 40rpx 30rpx;
    background-color: #fff;
    font-size: 28rpx;
    color: #2c2c2c; }
    .bindPhone .content icon {
      position: absolute;
      right: 10rpx;
      top: 10rpx; }
    .bindPhone .content .title {
      font-size: 34rpx;
      color: #2c2c2c; }
    .bindPhone .content .phone-num {
      height: 70rpx;
      margin-top: 20rpx;
      background-color: #e6e6e6; }
      .bindPhone .content .phone-num input {
        display: flex;
        align-items: center;
        height: 100%;
        padding-left: 20rpx; }
    .bindPhone .content .phone-code {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 70rpx;
      margin-top: 30rpx; }
      .bindPhone .content .phone-code .code {
        width: 320rpx;
        height: 100%;
        background-color: #e6e6e6; }
        .bindPhone .content .phone-code .code input {
          display: flex;
          align-items: center;
          height: 100%;
          padding-left: 20rpx; }
      .bindPhone .content .phone-code .button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 200rpx;
        height: 100%;
        background-color: #e27b10;
        color: #fff; }
      .bindPhone .content .phone-code .disable {
        background-color: #fff;
        border: 1rpx solid #e6e6e6;
        color: #e6e6e6; }
    .bindPhone .content .errorInfo {
      font-size: 22rpx;
      color: red;
      margin-top: 10rpx; }
    .bindPhone .content .info {
      color: #bfbfbf;
      font-size: 24rpx;
      margin-top: 30rpx; }
      .bindPhone .content .info text {
        color: #e27b10;
        font-weight: 600; }
